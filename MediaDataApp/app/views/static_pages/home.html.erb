<div class="jumbotron">
  <% if user_signed_in? %>
       <%if current_user.registros.count == 0 %>
              <%= render 'registros/form' %>
       <%end%>
  <% else %>
    <h1>Welcome!</h1>
    <p class="lead">
        Sign in to start making some new entries!!
    </p>
    <div class="row-fluid">
      
        <%= link_to "Sign In", new_user_session_path, :class => "btn btn-success" %>
     
        <%= link_to "Registry", new_user_registration_path, :class => "btn btn-success" %>
    </div>
  <% end %>
</div>